<script>

   var i = 1

   class Weblink{
     constructor(url, link){
     this.url = url;
     this.link = link
     }
   }

   class Lecture{
     constructor(title, keywords, pubdate, video, pdf, pptx, readings, weblinks){
     this.title = title;
     this.keywords = keywords;
     this.pubdate = pubdate;
     this.video = video;
     this.pdf = pdf;
     this.pptx = pptx;
     this.readings = readings;
     this.weblinks = weblinks;
     this.index = i;
     i += 1;
     } 
   }
   
